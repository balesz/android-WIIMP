<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.AppCompatButton
        android:text="Apply"
        style="?attr/appButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/filter_apply"/>
    <android.support.v7.widget.AppCompatButton
        android:text="Reset"
        style="?attr/appButton"
        android:layout_toLeftOf="@id/filter_apply"
        android:layout_toStartOf="@id/filter_apply"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/filter_reset"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_above="@id/filter_apply"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/filter_scroll">
        <android.support.v7.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:columnCount="2"
            tools:ignore="ContentDescription"
            android:theme="@style/AppTheme.Filter">

            <android.support.v7.widget.AppCompatTextView style="?attr/filterHeader"
                app:layout_columnSpan="2"
                android:text="REFINE"/>

            <android.support.v7.widget.AppCompatTextView style="?attr/filterDivider"
                app:layout_columnSpan="2" app:layout_gravity="fill" />

            <net.solutinno.wiimp.widgets.FilterItemView
                android:layout_height="48dp"
                app:filter_title="Group by" app:filter_subtitle="None"
                app:layout_columnSpan="2" app:layout_gravity="fill"
                android:id="@+id/group_by"/>

            <net.solutinno.wiimp.widgets.FilterItemView
                android:layout_height="48dp"
                app:filter_title="Order by" app:filter_subtitle="Newest first"
                app:layout_columnSpan="2" app:layout_gravity="fill"
                android:id="@+id/order_by"/>

            <android.support.v7.widget.AppCompatTextView style="?attr/filterDivider"
                app:layout_columnSpan="2" app:layout_gravity="fill" />

            <android.support.v7.widget.AppCompatTextView style="?attr/filterHeader"
                app:layout_columnSpan="2"
                android:text="Filter"/>

            <net.solutinno.wiimp.widgets.FilterItemView
                app:filter_title="Date" app:filter_subtitle="2015.11.01 - 2015.11.06"
                app:layout_columnSpan="2" app:layout_gravity="fill"
                android:id="@+id/date"/>

            <net.solutinno.wiimp.widgets.FilterItemView
                app:filter_title="Length" app:filter_subtitle="All"
                app:layout_columnSpan="2" app:layout_gravity="fill"
                android:id="@+id/length"/>

            <net.solutinno.wiimp.widgets.FilterItemView
                app:filter_title="Favorites" app:filter_subtitle="All"
                app:layout_columnSpan="2" app:layout_gravity="fill"
                android:id="@+id/favorites"/>

            <net.solutinno.wiimp.widgets.FilterItemView
                app:filter_title="Sites" app:filter_subtitle="All"
                app:layout_columnSpan="2" app:layout_gravity="fill"
                android:id="@+id/sites"/>

            <net.solutinno.wiimp.widgets.FilterItemView
                app:filter_title="Tags" app:filter_subtitle="All"
                app:layout_columnSpan="2" app:layout_gravity="fill"
                android:id="@+id/tags"/>

        </android.support.v7.widget.GridLayout>
    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>
